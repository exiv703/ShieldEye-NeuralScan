# ShieldEye NeuralScan - Environment Configuration
# Copy this file to .env and configure as needed

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=ShieldEye NeuralScan
APP_VERSION=1.0.0
APP_ENV=development

# ============================================================================
# AI Model Configuration
# ============================================================================
# Default AI model for code analysis
AI_MODEL=bigcode/starcoder2-3b
# Alternative models: bigcode/starcoder2-7b, mistralai/Mixtral-8x7B-Instruct-v0.1

# AI detail level: quick, standard, deep
AI_DETAIL=standard

# ============================================================================
# Scanner Settings
# ============================================================================
# Enable Trivy dependency scanning (requires Docker)
USE_TRIVY=false

# Save scan history to database
SAVE_HISTORY=true

# Minimum scan duration in milliseconds
MIN_SCAN_DURATION=2500

# ============================================================================
# Paths
# ============================================================================
DATA_DIR=data
LOGS_DIR=logs
CACHE_DIR=/tmp

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s

# ============================================================================
# UI Settings
# ============================================================================
WINDOW_WIDTH=1400
WINDOW_HEIGHT=900
GTK_THEME=Adwaita:dark
